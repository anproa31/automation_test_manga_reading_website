{
  "name": "testcafe_mangareadingwebsite",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "compile": "tsc",
    "test": "testcafe firefox test/specs/**/*.ts",
    "test:compile": "tsc && testcafe firefox dist/specs/**/*.js",
    "test:headless": "testcafe firefox:headless test/specs/**/*.ts",
    "test:watch": "testcafe -L firefox test/specs/**/*.ts",
    "cucumber": "cucumber-js",
    "cucumber:report": "npm run cucumber && npm run generate-report",
    "generate-report": "ts-node test/reporters/cucumber-html-reporter.ts",
    "test:with-report": "testcafe firefox:headless test/ui/auth/login.spec.ts --reporter json:reports/testcafe-report.json && npm run generate-report",
    "run-cucumber-tests": "ts-node test/run-tests-with-cucumber-report.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "testcafe": "^3.7.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "typescript": "^5.8.3"
  }
}
